<Page
    x:Class="BarberManagement.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarberManagement.Views"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Spacing="10">
            <TextBlock Text="Bem vindo!" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>
            <TextBox x:Name="EmailBox" PlaceholderText="E-mail"/>
            <PasswordBox x:Name="SenhaBox" PlaceholderText="Senha"/>
            <Button Content="Entrar" Click="Entrar_Click" Style="{StaticResource AccentButtonStyle}"/>
            <HyperlinkButton Content="Cadastrar novo usuário" Click="Cadastrar_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>